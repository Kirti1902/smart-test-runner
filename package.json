{
  "name": "impactrun",
  "version": "1.0.0",
  "description": "A FANG-level CLI tool for running tests, coverage, linting, and automation.",
  "main": "src/cli.cjs",
  "bin": {
    "impactrun": "src/cli.cjs"
  },
  "scripts": {
    "impactrun": "node src/cli.cjs",
    "lint": "eslint src/ --fix",
    "testlint": "npm run impactrun && npm run lint",
    "release": "semantic-release",
    "prepare": "husky"
  },
  "files": [
    "src",
    "tests",
    "reports",
    "README.md",
    "LICENSE"
  ],
  "keywords": ["cli", "test-runner", "lint", "coverage", "automation", "fang"],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "eslint": "^9.36.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "semantic-release": "^24.1.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.1",
    "@semantic-release/npm": "^11.0.2"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix"
    ]
  }
}
